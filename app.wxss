/**app.wxss**/
.container {
  height: 100%;
  font-size: 30rpx;
  position: relative;
} 
body,h1,p,h2,ul,ol,li{margin: 0;padding: 0;}

/** 浮动 **/
.fl{float: left;}
.fr{float: right;}
/** 清理浮动 **/
.clearfix:before, .clearfix:after {
    content:"";
    display:table;
}
.clearfix:after{
    clear:both;
}
ul, ol { list-style: none; }

.vm{vertical-align: middle;}
.vt{vertical-align: top;}
.vb{vertical-align: bottom;}

/* 重置超链接元素 */
a:link {
    text-decoration: none;
    color: #fff;
}
a:visited {
    text-decoration: none;
    color: #fff;
}
a:hover {   
    text-decoration: none;
    color: #fff;
}

.none{display: none;}
.block{display: block;}
.inline_block{display: inline-block;}

/** 一行溢出显示... **/
.nowrap{
    overflow: hidden;
    text-overflow:ellipsis;
    white-space: nowrap;
}
