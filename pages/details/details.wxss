.detail_img{
  width: 300rpx;
  height: 300rpx;
  margin: 35rpx 0 125rpx;
}
.detail_top{
  text-align: center;
  padding:40rpx 45rpx;
  color:#454552;
  border-bottom:30rpx solid #ededed;

}
.detail_cart{
  width: 70rpx;
  height: 70rpx;
  position: absolute;
  top: 40rpx;
  right: 40rpx;
}
.detail_cart image{
  width: 70rpx;
  height: 70rpx;
}
.detail_con{
  position:relative;
  width:100%;
  height:100rpx;
  line-height:100rpx;
  padding:0 50rpx;
  margin-bottom:60rpx;
  box-sizing:border-box;
  border-radius:50rpx;
  background:#AB956D;
  color:#fff;
  font-size:28rpx;
}
.goods-operation{
    position: relative;
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    padding: 0 50rpx;
    margin-bottom: 60rpx;
    box-sizing: border-box;
    border-radius: 50rpx;
    background: #AB956D;
    color: #fff;
    font-size: 28rpx;
}
.goods-operation text{
    display: inline-block;
    height: 100rpx;
}
.goods-operation-num{
    width: 160rpx;
    margin: 0 50rpx;
}
.goods-operation-reduce,.goods-operation-add{
  padding: 0 10rpx;
  font-size: 42rpx;
}
.goods-operation-add{
  margin-right: 30rpx;
}
.goods-cart-img{
  position: absolute;
  right: 50rpx;
  top: 28rpx;
  width: 45rpx;
  height: 45rpx;
}
.detail_info view:nth-child(2){
  font-size: 40rpx;
  font-weight: 500;
  margin: 20rpx 0;
}
.detail_info view:nth-child(3){
  font-size: 40rpx;
  font-weight: 500;
}
.detail_bottom_list{
  width: 100%;
  display: flex;
  height: 90rpx;
  line-height: 90rpx;
}
.detail_bottom_list view{
  flex: 1;
  text-align: center;
  color:#c7c7cb;
  box-sizing: border-box;
  border-bottom:1rpx solid #ededed;
}
.detail_bottom_list .active{
  color:#bcaa8a;
  border-bottom:5rpx solid #bcaa8a;
}
.detail_bottom_con{
  padding: 30rpx 50rpx;
}
.goods_number{
  width: 38rpx;
  height: 38rpx;
  font-size: 24rpx;
  line-height: 38rpx;
  color: #fff;
  background-color: #c81623;
  border-radius: 50%;
  text-align: center;
  position: absolute;
  top: 3rpx;
  right: 58rpx;
  z-index: 9;
}
.goods_to_cart{
  width: 20rpx;
  height: 20rpx;
  position: absolute;
  border-radius: 50%;
  top: 545rpx;
  right: 100rpx;
}
.num_animate{
  animation: changeStyle 0.5s;
  -webkit-animation: changeStyle 0.5s;
  animation-delay: 0.5s;
  -webkit-animation-delay: 0.5s;
}
.cart_animate{
  animation: cartRun 0.5s;
  -webkit-animation: cartRun 0.5s;
}
@keyframes cartRun
{
  from{top: 545rpx;right:100rpx;}
  to{top: 35rpx;right:100rpx;}
}

@-webkit-keyframes cartRun 
{
  from{background: red;}
  to{background: yellow;}
}
@keyframes changeStyle
{
  0%{transform: scale(1);}
  50%{transform: scale(1.2);}
  100%{transform: scale(1);}
}

@-webkit-keyframes changeStyle 
{
  0%{-webkit-transform: scale(1);}
  50%{-webkit-transform: scale(1.2);}
  100%{-webkit-transform: scale(1);}
}

